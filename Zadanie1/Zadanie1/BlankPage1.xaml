<Page
    x:Class="Zadanie1.BlankPage1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Zadanie1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:Name="pageTitle" Text="Page 2" />
        <HyperlinkButton Content="Click to go to page 2" HorizontalAlignment="Left" Margin="847,129,0,0" VerticalAlignment="Top" Click="HyperlinkButton_Click"/>
        <TextBlock Name="greeting" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Text="Enter your age" TextWrapping="Wrap" VerticalAlignment="Top" Width="97" Margin="642,629,0,0" Height="32"/>
        <TextBox x:Name="textbox_Age"  Text="{x:Bind Path=age, Mode=TwoWay}" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Height="41" Width="216" Margin="0,653,0,0"/>
    </Grid>
</Page>
